<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="300sp" android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/wifi_item">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wifi_tether_mac_address" android:textAlignment="viewStart" style="@style/wifi_item_label"/>
        <TextView android:textStyle="bold" android:id="@+id/macaddress" android:layout_width="match_parent" android:layout_height="wrap_content" android:textIsSelectable="true" style="@style/wifi_item_label"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/wifi_item">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wifi_tether_ip_address" style="@style/wifi_item_label"/>
        <TextView android:textStyle="bold" android:id="@+id/ipaddress" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/wifi_item_label"/>
    </LinearLayout>
</LinearLayout>
