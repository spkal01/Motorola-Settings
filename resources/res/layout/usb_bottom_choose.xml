            <TextView android:textSize="@dimen/bottom_charging_text_size" android:textColor="@color/usb_bottom_title_text" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="@dimen/bottom_title_height" android:text="@string/usb_bottom_choose_changing" android:paddingStart="@dimen/bottom_charging_drawable_padding_start" android:paddingEnd="@dimen/bottom_drawable_padding"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
